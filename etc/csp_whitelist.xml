<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp:etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="checkout_com_js" type="host">*.checkout.com</value>
                <value id="jsdelivr_cdn" type="host">cdn.jsdelivr.net</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="checkout_com_js" type="host">*.checkout.com</value>
                <value id="jsdelivr_cdn" type="host">cdn.jsdelivr.net</value>
            </values>
        </policy>
        <policy id="frame-src">
            <values>
                <value id="checkout_com_frames" type="host">*.checkout.com</value>
                <value id="ckotech_co_frames" type="host">*.ckotech.co</value>
                <value id="google_frames" type="host">*.google.com</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="jsdelivr_cdn" type="host">cdn.jsdelivr.net</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
